<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".TwoSemester">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        app:srcCompat="@drawable/roman2" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:layout_below="@+id/user_name"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:rowCount="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:fontFamily="@font/nunito"
            android:text="SEMESTER 1 :"
            android:textColor="#E40B0B"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/sem1cgpa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:ems="10"
            android:hint="ENTER GPA"
            android:textColor="#FBFBFF"
            android:textColorHighlight="#FAF6F6"
            android:textColorHint="#FAF6F6"
            android:inputType="numberDecimal"
            android:maxLength="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito"
            android:text="SEMESTER 2 :"
            android:textColor="#E40B0B"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/sem2cgpa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="ENTER GPA"
            android:textColor="#FBFBFF"
            android:textColorHighlight="#FAF6F6"
            android:textColorHint="#FAF6F6"
            android:inputType="numberDecimal"
            android:maxLength="4" />


    </GridLayout>

    <ImageButton
        android:id="@+id/resultcgpa"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="150dp"
        app:srcCompat="@drawable/calc" />

</RelativeLayout>