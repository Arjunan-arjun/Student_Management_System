<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Semester8">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        app:srcCompat="@drawable/roman8" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="575dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sub1name"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="PROFESSIONAL ELECTIVE IV"
                android:textColor="#174EF1"
                android:textSize="30sp" />

            <Spinner
                android:id="@+id/sub1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:drawable/btn_dropdown"
                android:outlineAmbientShadowColor="#E33030"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/sub2name"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="PROFESSIONAL ELECTIVE V"
                android:textColor="#174EF1"
                android:textSize="30sp" />

            <Spinner
                android:id="@+id/sub2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                tools:layout_editor_absoluteX="-16dp"
                tools:layout_editor_absoluteY="80dp" />

            <TextView
                android:id="@+id/lab1name"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textColor="#174EF1"
                android:text="PROJECT WORK (CS8811)"
                android:textSize="30sp" />

            <Spinner
                android:id="@+id/lab1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="183dp" />


            <ImageButton
                android:id="@+id/result"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/gpa" />


        </LinearLayout>
    </ScrollView>



</RelativeLayout>